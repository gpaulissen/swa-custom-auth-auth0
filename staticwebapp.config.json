{
    "routes": [
        {
            "route": "/login",
            "redirect": "/.auth/login/auth0"
        },
        {
            "route": "/logout",
            "redirect": "/.auth/logout/auth0"
        }
    ],
    "auth": {
	"identityProviders": {
	    "customOpenIdConnectProviders": {
		"auth0": {
                    "registration": {
			"clientIdSettingName": "KEYCLOAK_CLIENT_ID",
			"clientCredential": {
                            "clientSecretSettingName": "KEYCLOAK_CLIENT_SECRET"
			},
			"openIdConnectConfiguration": {
                            "wellKnownOpenIdConfiguration": "https://auth.services.t-hive.io/auth/realms/Portal/.well-known/openid-configuration"
			}
                    },
                    "login": {
			"nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
			"scopes": ["openid", "profile", "roles"],
                    }
		}
            }
	}
    }
}
